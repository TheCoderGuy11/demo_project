require "time"
<br><br><p class="h1">My Cart</p> 
<table class="table">
  <thead>
    <tr>
        <th>User Id</th>
        <th>Product Id</th>
        <th>Payment Mode</th>
        <th>Status</th>
        <th>Expected Time Of Delivery</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |o| %>
      <tr>
        <td><%= o.user_id %></td>
        <td><%= o.product_id %></td>
        <td><%= o.payment %></td>
        <td><%= o.status %></td>
        <td><%= expected_delivery_date(o.product) %></td>
        <td><button type="button" class="btn btn-warning"><%= link_to 'Show', order_path(o) %></button></td>
        <td><button type="button" class="btn btn-info"><%= link_to 'Cancel Order', cancel_item_order_path(o)  %></button></td>
        <% if o.canceled? %>
          <td><button type="button" class="btn btn-danger"><%= link_to 'Destroy Item', order_path(o), 
                method: :delete, 
                data: { confirm: 'Are You Sure?' },
                :remote => true, :class => 'delete_js' %></button></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>