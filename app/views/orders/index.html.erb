<br><br><p class="h1">My Cart</p> 
<table class="table table-striped">
  <thead class="thead">
    <tr>
        <th></th>
        <th>User Id</th>
        <th>Product Id</th>
        <th>Payment Mode</th>
        <th>Status</th>
        <th>Expected Time Of Delivery</th>
        <th><center>Actions</center></th>
        <th></th>
        <th></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |o| %>
      <tr>
        <% if o.product.image.present? %>
          <p>
            <td><%= image_tag o.product.image_url, width: 28%></td>
          </p>
        <% else %>
          <p>
            <td><%= image_tag o.product.image_url, width: 28 %></td>
          </p>
        <% end %>
        <td><%= o.user_id %></td>
        <td><%= o.product_id %></td>
        <td><%= o.payment %></td>
        <td><%= o.status %></td>
        <% if o.delivery_date == nil %>
          <td><%= expected_delivery_date(o.product) %></td>
        <% else %>
          <td><%= o.delivery_date %>
        <% end %>
        <td><button type="button" class="btn btn-warning"><%= link_to 'Show', order_path(o) %></button></td>
        <td><button type="button" class="btn btn-info"><%= link_to 'Cancel Order', cancel_item_order_path(o)  %></button></td>
        <% if o.canceled? %>
          <td><button type="button" class="btn btn-danger"><%= link_to 'Destroy Item', order_path(o), 
                method: :delete, 
                data: { confirm: 'Are You Sure?' },
                :remote => true, :class => 'delete_js' %></button></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<nav class="navbar navbar-fixed-bottom">
  <div class="row">
    <div class="col-md-5 col-md-offset-4">
      <%= will_paginate @orders, renderer: BootstrapPagination::Rails %>
    </div> 
  </div>
</nav>