<br><br><p class="h1">My Cart</p> 
<table class="table table-striped">
  <thead class="thead">
    <tr>
        <th></th>
        <th>User Id</th>
        <th>Product Id</th>
        <th>Payment Mode</th>
        <th>Status</th>
        <th>Expected Time Of Delivery</th>
        <th><center>Actions</center></th>
        <th></th>
        <th></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |o| %>
      <tr>
        <% if o.product.image.present? %>
          <p>
            <td><%= image_tag o.product.image_url, width: 28%></td>
          </p>
        <% else %>
          <p>
            <td><%= image_tag o.product.image_url, width: 28 %></td>
          </p>
        <% end %>
        <td><%= o.user_id %></td>
        <td><%= o.product_id %></td>
        <td><%= o.payment %></td>
        <td><%= o.status %></td>
        <td><%= o.delivery_date %></td>
        <td><%= link_to 'Show', order_path(o), :class => "btn btn-info" %></td>
        <% if o.delivered? %>
          <td><%= link_to 'Invoice', invoice_pdf_order_path(o, format: :pdf), class: "btn btn-success" %></td>
        <% elsif o.canceled? %>
          <td><%= link_to 'Destroy Item', order_path(o), 
                class: "btn btn-danger",
                method: :delete, 
                data: { confirm: 'Are You Sure?' },
                remote: true %>
          </td>
        <% else %>
          <td><%= link_to 'Cancel Order', cancel_item_order_path(o), class: "btn btn-primary"  %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<nav class="navbar navbar-fixed-bottom">
  <div class="row">
    <div class="col-md-5 col-md-offset-4">
      <%= will_paginate @orders, renderer: BootstrapPagination::Rails %>
    </div> 
  </div>
</nav>