<br /><br /><br />
<div class="container">
  <h1>Profile</h1>
    <div class="tabbable">
      <div class="tab-content no-border padding-24">
        <div id="home" class="tab-pane in active">
          <div class="row">
            <div class="col-xs-12 col-sm-3 center">
              <span class="profile-picture">
                <% if @user.image.present? %>
                <p>
                  <%= image_tag @user.image.url, :size => "220x200" %>
                </p>
                <% else %>
                <p>
                  <%= image_tag @user.image.url, :size => "220x200" %>
                </p>
                <% end %>
              </span>
              <div class="space space-6"></div>
            </div><!-- /.col -->

            <div class="col-md-8">
              <h4 class="profile-info-value">
                    User Id:<span> <%= current_user.id%></span>
              </h4>
              <h4 class="blue">
                Name: <span class="middle"><%= current_user.name %></span>
              </h4>

              <div class="profile-user-info">
                <div class="profile-info-row">
                  <h4 class="profile-info-value">
                    Email:<span> <%= current_user.email%></span>
                  </h4>
                </div>

                <div class="profile-info-row">
                  <h4 class="profile-info-value">
                    Mobile:<span> <%= current_user.mobile%></span>
                  </h4>
                </div>

                <div class="profile-info-row">
                  <h4 class="profile-info-value">
                    Address:<span> <%= current_user.address%></span>
                  </h4>
                </div>

                <div class="profile-info-row">
                  <h4 class="profile-info-value">
                    Your Role:<span> <%= current_user.role%></span>
                  </h4>
                </div>

                <div class="profile-info-row">
                  <h4 class="profile-info-value">
                    <%= link_to "Edit Profile", edit_user_registration_path(current_user.id), class: "btn btn-primary btn-md"%>
                    <%= link_to "Back",   welcome_home_path, class: "btn btn-primary" %>
                  </h4>
                </div>
              </div>
            </div>
          <div class="space-20"></div>
        </div><!-- /#pictures -->
      </div>
    </div>
  </div>